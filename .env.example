# Application Configuration
APP_NAME="SO Framework"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost/so-backend-framework
APP_KEY=

# Database Configuration (Application Database)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=so-framework
DB_USERNAME=root
DB_PASSWORD=

# Essentials Database Configuration (Framework Tables)
# This database stores essential framework tables (users, sessions, cache, queue, etc.)
# Keeps framework tables separate from your application tables
DB_ESSENTIALS_CONNECTION=mysql
DB_ESSENTIALS_HOST=127.0.0.1
DB_ESSENTIALS_PORT=3306
DB_ESSENTIALS_DATABASE=so_essentials
DB_ESSENTIALS_USERNAME=root
DB_ESSENTIALS_PASSWORD=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_COOKIE=so_session
SESSION_SECURE_COOKIE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=lax

# Cookie Configuration (for remember me)
COOKIE_SECURE=false
COOKIE_DOMAIN=

# Cache Configuration
CACHE_DRIVER=database
CACHE_PREFIX=so_cache

# Activity Logging
ACTIVITY_LOG_ENABLED=true

# Queue System
QUEUE_CONNECTION=database

# Notifications
NOTIFICATION_CHANNEL=database
QUEUE_NOTIFICATIONS=false
NOTIFICATION_PRUNE_DAYS=30

# Security Configuration
CSRF_ENABLED=true

# JWT Configuration
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_TTL=3600

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60,1

# Internal API Configuration
INTERNAL_API_SECRET=
INTERNAL_API_ENABLED=true
INTERNAL_API_URL=

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-CSRF-TOKEN,X-Requested-With

# Security Configuration
BCRYPT_ROUNDS=12
CSRF_EXPIRATION=7200

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=storage/logs/app.log
