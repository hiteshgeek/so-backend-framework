# =============================================
# SO Backend Framework - Environment Configuration
# =============================================
# Copy this file to .env and configure for your environment
# Documentation: /docs/env-configuration

# =============================================
# Application Configuration
# =============================================
APP_NAME="SO Backend Framework"
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_KEY=

# Asset Configuration
ASSET_URL=
ASSET_VERSIONING=true

# =============================================
# Database Configuration (Application Database)
# =============================================
# Primary database for your application data
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=so_framework
DB_USERNAME=root
DB_PASSWORD=

# =============================================
# Essentials Database Configuration
# =============================================
# Separate database for framework tables (sessions, cache, queue, etc.)
# Recommended: Keep framework tables separate from application tables
DB_ESSENTIALS_CONNECTION=mysql
DB_ESSENTIALS_HOST=127.0.0.1
DB_ESSENTIALS_PORT=3306
DB_ESSENTIALS_DATABASE=so_essentials
DB_ESSENTIALS_USERNAME=root
DB_ESSENTIALS_PASSWORD=

# =============================================
# Session Configuration
# =============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_COOKIE=so_session
SESSION_SECURE_COOKIE=false
SESSION_ENCRYPT=false

# =============================================
# Cache Configuration
# =============================================
CACHE_DRIVER=database
CACHE_FILE_PATH=storage/cache
CACHE_PREFIX=so_cache

# =============================================
# Authentication & Security
# =============================================
# Login Throttling
AUTH_THROTTLE_ENABLED=true
AUTH_THROTTLE_MAX_ATTEMPTS=5
AUTH_THROTTLE_DECAY_MINUTES=15
AUTH_REMEMBER_DURATION=2592000

# CSRF Protection
CSRF_ENABLED=true

# JWT Configuration
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_TTL=3600
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60,1

# Login Lockout
LOGIN_LOCKOUT_ENABLED=true
LOGIN_MAX_ATTEMPTS=5
LOGIN_DECAY_MINUTES=15

# =============================================
# Activity Logging
# =============================================
ACTIVITY_LOG_ENABLED=true
ACTIVITY_LOG_NAME=default
ACTIVITY_LOG_RETENTION_DAYS=365
ACTIVITY_LOG_BATCH_TRACKING=false

# =============================================
# Queue System
# =============================================
QUEUE_CONNECTION=database

# =============================================
# Notifications
# =============================================
NOTIFICATION_CHANNEL=database
QUEUE_NOTIFICATIONS=false
NOTIFICATION_PRUNE_DAYS=30

# =============================================
# Mail Configuration
# =============================================
MAIL_MAILER=smtp
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Settings
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=
MAIL_PASSWORD=

# =============================================
# API Configuration
# =============================================
API_DEFAULT_VERSION=v1
API_PREFIX=api
API_CLIENT_TIMEOUT=30
API_CLIENT_RETRY=3

# Internal API (Signature Authentication)
INTERNAL_API_SIGNATURE_KEY=
INTERNAL_API_SIGNATURE_MAX_AGE=300

# =============================================
# Logging Configuration
# =============================================
LOG_CHANNEL=daily
LOG_LEVEL=info

# =============================================
# Profiler & Debugging
# =============================================
PROFILER_TOOLBAR=false
PROFILER_SLOW_QUERY=100
PROFILER_QUERY_WARNING=20
PROFILER_MEMORY_WARNING=80
